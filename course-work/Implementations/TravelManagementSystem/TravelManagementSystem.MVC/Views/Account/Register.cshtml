@using TravelManagementSystem.MVC.Models.User
@using TravelManagementSystem.MVC.Models.User.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<h2 class="mt-4">
    <i class="bi bi-person-plus-fill me-2"></i>Регистрация
</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors?.Count > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState[""].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <div class="mb-3">
        @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Потребителско име" })
        </div>
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола" })
        </div>
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Телефонен номер" })
        </div>
        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
            @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle me-1"></i>Регистрация
    </button>
}
