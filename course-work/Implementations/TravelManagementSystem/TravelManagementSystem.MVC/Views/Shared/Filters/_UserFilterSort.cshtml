@using TravelManagementSystem.MVC.Models.User
@using TravelManagementSystem.MVC.Models.User.Parameters
@model UserFilterParameters

<form method="get" class="row g-2 mb-4 align-items-end">
    <div class="col-md-3">
        <input type="text" name="username" value="@Model?.Username" class="form-control" placeholder="Потребителско име" />
    </div>

    <div class="col-md-3">
        <input type="text" name="email" value="@Model?.Email" class="form-control" placeholder="Имейл" />
    </div>

    <div class="col-md-2">
        <select name="orderBy" class="form-select">
            <option value="">Сортиране по...</option>
            <option value="username" selected="@(Model?.OrderBy == "username" ? "selected" : null)">Потребителско име</option>
            <option value="email" selected="@(Model?.OrderBy == "email" ? "selected" : null)">Имейл</option>
            <option value="dateOfBirth" selected="@(Model?.OrderBy == "dateOfBirth" ? "selected" : null)">Дата на раждане</option>
            <option value="role" selected="@(Model?.OrderBy == "role" ? "selected" : null)">Роля</option>
            <option value="isActive" selected="@(Model?.OrderBy == "isActive" ? "selected" : null)">Активност</option>
            <option value="createdOn" selected="@(Model?.OrderBy == "createdOn" ? "selected" : null)">Създадено на</option>
            <option value="updatedOn" selected="@(Model?.OrderBy == "updatedOn" ? "selected" : null)">Обновено на</option>
        </select>
    </div>

    <div class="col-md-2">
        <select name="isDescending" class="form-select">
            <option value="false" selected="@(Model?.IsDescending == false ? "selected" : null)">Възходящо</option>
            <option value="true" selected="@(Model?.IsDescending == true ? "selected" : null)">Низходящо</option>
        </select>
    </div>

    <div class="col-md-auto d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search me-1"></i>Търси
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle me-1"></i>Изчисти
        </a>
    </div>

    <input type="hidden" name="page" value="1" />
    <input type="hidden" name="pageSize" value="@Model?.PageSize" />
</form>
